<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
    <title>Dashboard | Users</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand">Dashboard</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/dashboard/users">Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/dashboard/games">Games</a>
          </li>
          <li>
            <a class="btn btn-danger" href="/logout" role="button">Log Out</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container pt-3">
      <div class="row d-flex flex-row-reverse px-0 py-1">
        <a class="btn btn-primary" href="/users/new" role="button">Create New User</a>
      </div>

      <div class="row">
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th scope="col">No.</th>
              <th scope="col">Username</th>
              <th scope="col">Email</th>
              <th scope="col">Full Name</th>
              <th scope="col" class="text-center">Details</th>
            </tr>
          </thead>
          <% let i = 1 %>
          <tbody>
            <% users.forEach(user => { %>
            <tr>
              <td scope="row"><%= i %></td>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td><%= user.firstname %> <%= user.lastname %></td>
              <td class="text-center">
                <form action="/users/<%=user.uuid%>" method="GET">
                  <button type="submit" class="btn btn-primary btn-sm">Details</button>
                </form>
              </td>
            </tr>
            <% i++ %> <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
