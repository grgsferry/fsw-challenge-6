<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
    <title>User Detail</title>
  </head>
  <body>
    <nav class="navbar navbar-expand navbar-light d-flex justify-content-between">
      <h1>USER DETAIL</h1>
      <a class="btn btn-danger" href="/logout" role="button">Log Out</a>
    </nav>
    <div class="container">

      <div class="row d-flex justify-content-between py-2">
        <div class="col-5">
          <a class="btn btn-secondary" href="/dashboard" role="button">Back</a>
        </div>
        <div class="col-5 d-flex flex-row-reverse">
          <form action="/users/edit/<%=user.uuid%>" method="GET">
            <button type="submit" class="btn btn-primary">Edit User</button>
          </form>
      
          <form action="/scores/<%=user.uuid%>" method="GET">
            <button type="submit" class="btn btn-primary">Add Score</button>
          </form>
    
        </div>
        <div class="col-2 d-flex flex-row-reverse">
          <form action="/users/delete/<%=user.uuid%>" method="POST">
            <button type="submit" class="btn btn-danger">Delete User</button>
          </form>
        </div>
      </div>

      <div class="row">
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Data Field</th>
              <th scope="col">User Value</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>UUID</td>
              <td><%= user.uuid %></td>
            </tr>
            <tr>
              <td>Username</td>
              <td><%= user.username %></td>
            </tr>
            <tr>
              <td>Email</td>
              <td><%= user.email %></td>
            </tr>
            <tr>
              <td>Full Name</td>
              <td><%= user.firstname %> <%= user.lastname %></td>
            </tr>
            <tr>
              <td>Created At</td>
              <td><%= user.createdAt %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="row">
        <h2>User Game Scores</h2>
      </div>

      <div class="row">
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th scope="col">No. </th>
              <th scope="col">Game ID</th>
              <th scope="col">Score</th>
              <th scope="col">Created At</th>
              <th scope="col" class="text-center">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i<user.scores.length; i++) {%>
              <tr>
                <td><%= i+1 %> </td>
                <td><%= user.scores[i].gameid %></td>
                <td><%= user.scores[i].score %></td>
                <td><%= user.scores[i].createdAt %></td>
                <td class="text-center">
                  <form action="/scores/delete/<%=user.uuid%>/<%=user.scores[i].uuid%> " method="POST">
                    <button class="btn btn-sm btn-danger" type="submit">X</button>
                  </form>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

  </body>
</html>
